<project name="module-repository" basedir="." default="modules">

    <import file="lib.xml"/>

    <target name="copy-files">
        <copy todir="target">
            <fileset dir="src/main/resources">
                <include name="bin/**"/>
            </fileset>
            <fileset dir="src/main/resources">
                <include name="domain/**"/>
            </fileset>
            <fileset dir="src/main/resources">
                <include name="server/**"/>
            </fileset>
        </copy>
        <chmod perm="+x">
            <fileset dir="target/bin">
                <include name="**/*.sh"/>
            </fileset>
        </chmod>
    </target>

